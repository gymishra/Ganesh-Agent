{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowWorkshopParticipants",
      "Effect": "Allow",
      "Principal": "*",
      "Action": [
        "s3:GetObject",
        "s3:ListBucket",
        "s3:GetBucketLocation"
      ],
      "Resource": [
        "arn:aws:s3:::wrkshp-qbiz-data",
        "arn:aws:s3:::wrkshp-qbiz-data/*"
      ],
      "Condition": {
        "StringLike": {
          "aws:userid": "*:*FileUploadFunction*"
        }
      }
    },
    {
      "Sid": "AllowOwnerFullAccess",
      "Effect": "Allow",
      "Principal": {
        "AWS": {"Fn::Sub": "arn:aws:iam::${AWS::AccountId}:root"}
      },
      "Action": "s3:*",
      "Resource": [
        "arn:aws:s3:::wrkshp-qbiz-data",
        "arn:aws:s3:::wrkshp-qbiz-data/*"
      ]
    }
  ]
}
