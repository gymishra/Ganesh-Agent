{
  "mcp_servers": {
    "customer-service": {
      "description": "Customer management and contact information service",
      "command": "/home/gyanmis/bin/odata-mcp",
      "args": [
        "--service", "https://your-sap-system/sap/opu/odata/sap/CUSTOMER_SERVICE/",
        "--user", "${ODATA_USERNAME}",
        "--password", "${ODATA_PASSWORD}",
        "--entities", "Customer,CustomerAddress",
        "--tool-shrink",
        "--read-only",
        "--max-items", "50"
      ],
      "environment": {
        "ODATA_USERNAME": "your-username",
        "ODATA_PASSWORD": "your-password"
      },
      "use_cases": [
        "customer lookup",
        "credit verification", 
        "contact information retrieval",
        "customer demographics",
        "address management"
      ]
    },
    "sales-order-service": {
      "description": "Sales order management and tracking service",
      "command": "/home/gyanmis/bin/odata-mcp",
      "args": [
        "--service", "https://your-sap-system/sap/opu/odata/sap/SALES_ORDER_SERVICE/",
        "--user", "${ODATA_USERNAME}",
        "--password", "${ODATA_PASSWORD}",
        "--entities", "SalesOrder,SalesOrderItem",
        "--tool-shrink",
        "--max-items", "100"
      ],
      "environment": {
        "ODATA_USERNAME": "your-username", 
        "ODATA_PASSWORD": "your-password"
      },
      "use_cases": [
        "order tracking",
        "sales reporting",
        "order status updates", 
        "delivery management",
        "sales analytics"
      ]
    },
    "inventory-service": {
      "description": "Inventory management and stock control service",
      "command": "/home/gyanmis/bin/odata-mcp",
      "args": [
        "--service", "https://your-sap-system/sap/opu/odata/sap/INVENTORY_SERVICE/",
        "--user", "${ODATA_USERNAME}",
        "--password", "${ODATA_PASSWORD}",
        "--entities", "Product,StockMovement",
        "--tool-shrink",
        "--read-only",
        "--max-items", "200"
      ],
      "environment": {
        "ODATA_USERNAME": "your-username",
        "ODATA_PASSWORD": "your-password"
      },
      "use_cases": [
        "stock level checking",
        "inventory movements",
        "product availability",
        "reorder management", 
        "warehouse operations"
      ]
    }
  },
  "configuration_notes": {
    "authentication": "Update environment variables with your actual credentials",
    "urls": "Replace placeholder URLs with your actual SAP system endpoints",
    "entities": "Customize entity lists based on your actual OData service metadata",
    "security": "Consider using --read-only for production safety",
    "performance": "Adjust --max-items based on your data volume needs"
  },
  "integration_with_ai_classifier": {
    "description": "This configuration works with your OData AI Classifier project",
    "workflow": [
      "1. User asks a natural language question",
      "2. Your AI classifier determines which service to use",
      "3. The appropriate MCP server configuration is selected",
      "4. The MCP server executes the OData operation",
      "5. Results are returned to the user"
    ],
    "example_integration": {
      "user_question": "What is the credit limit for customer ABC123?",
      "ai_classifier_output": "customer-service",
      "mcp_server_used": "customer-service",
      "operation": "filter_Customer_for_CustomerSvc",
      "parameters": {
        "$filter": "CustomerID eq 'ABC123'",
        "$select": "CustomerID,CompanyName,CreditLimit"
      }
    }
  }
}
